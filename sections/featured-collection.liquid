<div class="container">
    <h1 class="text-align-center heading">{{ section.settings.title }}</h1>
    <div class="collection-grid">
        {% for product in collections[section.settings.collection].products limit:section.settings.limit_product %}
            {% render 'card-product', product: product %}
        {% endfor %}
    </div>
</div>
  
{% schema %}
    {
        "name": "Featured Collection",
        "class": "featured-collection",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Heading",
                "default": "Featured Collection"
            },
            {
                "type": "collection",
                "id": "collection",
                "label": "Collection"
            },
            {
                "type": "header",
                "content": "Products"
            },
            {
                "type": "range",
                "id": "limit_product",
                "label": "Limit products",
                "max": 50,
                "min": 3,
                "step": 1,
                "default": 6
            },
            {
                "type": "checkbox",
                "id": "quick_btn",
                "label": "Quick Button"
            }
        ],
        "presets": [
            {
                "name": "Featured Collection"
            }
        ]
    }
{% endschema %}